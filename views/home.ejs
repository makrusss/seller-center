    <CENTER>
      <div style="font-family: Gill Sans, sans-serif; margin-top:20px;" >
        <h4>WELCOME TO SELLER-CENTER</h4>
        <h5>List of Products: <%= data.length %></h5>
      </div>
    </CENTER>
    <div>
      <div class="row col-sm-8" style="margin-left: 20px;">
        <% data.forEach(el => { %>

          <div class="card" style="width: 18rem; margin: 20px;">
            <img src="<%= el.imageURL %>" class="card-img-top" alt="img" style="width:260px" height="300px">
            <div class="card-body">
              <h5 class="card-title"><%= el.name %></h5>
              <p class="card-text"><%= el.description %></p>
              <p class="card-text"><%= toRupiah(el.price) %></p>
              <a href="/home/<%= el.id %>" class="stretched-link"></a>
            </div>
          </div>
          
        <% }) %>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
